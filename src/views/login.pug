extends ../_layout/pages.pug

block scripts
  script(src='/js/main.js')

block view
  .container
    .row.justify-content-center
      .col-lg-4
        .card-group.d-block.d-md-flex.row
          .card.col-md-7.p-4.mb-0
            .card-body
              h1 Login
              p.text-body-secondary Sign In to your account
              form.needs-validation.form-auth(method="post" action="?")
                .input-group.mb-3.has-validation
                  span.input-group-text
                      svg.icon
                        use(xlink:href="/vendors/@coreui/icons/free.svg#cil-user")
                        |
                  input.form-control(name="login" type='text', placeholder='Username' required)
                .input-group.mb-4.has-validation
                  span.input-group-text
                      svg.icon
                        use(xlink:href="/vendors/@coreui/icons/free.svg#cil-lock-locked")
                        |
                  input.form-control(name="password" type='password', placeholder='Password' required)
                  .invalid-feedback
                    | Invalid login or password!
                .row
                  .col-6
                    button.btn.btn-primary.px-4(type='submit') Login
                //-.col-6.text-end
                  button.btn.btn-link.px-0(type='button') Forgot password?
          //.card.col-md-5.text-white.bg-primary.py-5
            .card-body.text-center
              div
                h2 Sign up
                p
                  | Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                button.btn.btn-lg.btn-outline-light.mt-3(type='button') Register Now!
