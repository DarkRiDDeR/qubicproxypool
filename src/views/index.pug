extends ../_layout/public.pug

block styles
  link(rel='stylesheet' href='/vendors/@coreui/chartjs/css/coreui-chartjs.css')

block scripts
  //if !starter
  // Plugins and scripts required by this view
  script(src='/vendors/@coreui/utils/js/index.js')
  script(src='/vendors/chart.js/js/chart.umd.js')
  script(src='/js/main.js')

block view
  .row
    .col-md-12
      .mb-4
        .progress(id="epochProgress")
          .progress-bar.bg-info.progress-bar.progress-bar-striped.progress-bar-animated(id="epoch-progress" role='progressbar' style='width: 0%; overflow: visible;' aria-valuenow='0' aria-valuemin='0' aria-valuemax='100')
            span Qubic epoch#{' '}
              span.value 0: 0%


      .mb-4
        .row.g-4(id="main-info")
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-info(class="info-active-workers")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-people")
                    |
                .fs-4.fw-semibold 
                  span 0
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Active workers
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-success(class="info-hashrate")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-speedometer")
                    |
                .fs-4.fw-semibold
                  span 0
                  | #{" "}It/s
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Total It/s
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-warning(class="info-solutions")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-basket")
                    |
                .fs-4.fw-semibold
                  span 0
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Solutions
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-primary(class="info-price")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-dollar")
                    |
                .fs-4.fw-semibold 
                  span 0.00
                  | $ 1M
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Qubic price
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-danger(class="info-sol-price")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-cash")
                    |
                .fs-4.fw-semibold 
                  span 0
                  | $
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Sol price
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-info(class="info-network")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-swap-horizontal")
                    |
                .fs-4.fw-semibold
                  span 0
                  | #{' '}Mit/s
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Est. network
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
        // /.row.g-4
      .card.mb-4
        .card-body
          h1 Qubic Proxy Pool
          p 
            | is a project aimed at cooperative mining in the Qubic crypto network through an intermediary account (in fact, it is not a full-fledged pool) on the server
            |
            a(href="https://app.qubic.li" target="_blank") https://app.qubic.li
            |. At the end of the epoch the received funds are divided depending on the contribution of each user through the PPSTI (Payment per share for time intervals) reward system. This service will be especially useful for miners with small capacities, who will be rewarded depending on their hash rate, not on the number of solutions found.
          include ../_partials/profitcalc.pug
 
      .card.mb-4           
        .table-responsive
          table.table.table-striped.border.mb-0(id="table-miners")
            thead.fw-semibold.text-nowrap
              tr.align-middle
                th.bg-body-secondary Miners
                th.bg-body-secondary Workers
                th.bg-body-secondary Hashrate
                th.bg-body-secondary Solutions
            tbody
            //--  tr.align-middle
                td fa*****
                td 15
                td 921 It/s
                td 3
              tr.align-middle
                td ro*****
                td 15
                td 921It/s
                td 3
        // /.table-responsive

      .card.mb-4.sols-chart
        .card-header
          H3 Solutions
        .card-body.overflow-scroll
          .c-chart-wrapper
            canvas#canvasSolsChart(style="height:100%;width:100%")

      .card.mb-4
        .card-body
          include ../_partials/about.pug
  // /.row
