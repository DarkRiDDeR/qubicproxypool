extends ../_layout/public.pug

block styles

block scripts
  if !starter
    // Plugins and scripts required by this view
    script(src='/vendors/@coreui/utils/js/index.js')
    script(src='/js/main.js')

block view
  .row
    .col-md-12
      .mb-4
        .progress(style='height: 3rem; font-size: 1.8em; font-weight: bold; background-color: rgb(50, 58, 73)')
          .progress-bar.bg-info.progress-bar.progress-bar-striped.progress-bar-animated(id="epoch-progress" role='progressbar' style='width: 10%; overflow: visible;' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
            span(style="margin: 0.5em;") Qubic epoch
              | 
              span.value 0: 0%


      .mb-4
        .row.g-4(id="main-info")
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-info(class="info-active-workers")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-people")
                    |
                .fs-4.fw-semibold 
                  span 0
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Active workers
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-success(class="info-hashrate")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-speedometer")
                    |
                .fs-4.fw-semibold
                  span 0
                  | #{" "}It/s
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Total It/s
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-warning(class="info-solutions")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-basket")
                    |
                .fs-4.fw-semibold
                  span 0
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Solutions
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-primary(class="info-price")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-dollar")
                    |
                .fs-4.fw-semibold 
                  span 0.000000
                  | $
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Qubic price
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-danger(class="info-sol-price")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-cash")
                    |
                .fs-4.fw-semibold 
                  span 0
                  | $
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Sol price
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
          .col-6.col-lg-4.col-xl-3.col-xxl-2
            .card.text-white.bg-info(class="info-network")
              .card-body
                .text-white.text-opacity-75.text-end
                  svg.icon.icon-xxl
                    use(xlink:href="/vendors/@coreui/icons/free.svg#cil-swap-horizontal")
                    |
                .fs-4.fw-semibold
                  span 0
                .small.text-white.text-opacity-75.text-uppercase.fw-semibold.text-truncate Est. network It/s
                .progress.progress-white.progress-thin.mt-3
                  .progress-bar(role='progressbar', style='width: 25%', aria-valuenow='25', aria-valuemin='0', aria-valuemax='100')
          // /.col
        // /.row.g-4
      .card.mb-4
        .card-body
          h1 Qubic Proxy Pool
          p 
            | is a project aimed at cooperative mining in the Qubic network through an intermediary account (in fact, it is not a full-fledged pool) on the server
